alias tpe-behat='docker exec -t dev_backend_1 bin/behat'
alias tpe-phpspec-domain='docker exec -t dev_backend_1 /bin/bash -c "cd packages/domain/ && bin/phpspec run"'
alias tpe-phpunit-infrastructure='docker exec -t dev_backend_1 /bin/bash -c "cd packages/infrastructure/ && bin/phpunit"'
alias tpe-phpspec-infrastructure='docker exec -t dev_backend_1 /bin/bash -c "cd packages/infrastructure/ && bin/phpspec run"'
alias tpe-unison='unison $TPE_PATH socket://192.168.99.100:5000 -auto -batch -ignore "Name {.git,node_modules}"'
alias tpe-unison-fsmonitor='fswatch -o $TPE_PATH | xargs -n1 -I{} unison $TPE_PATH socket://192.168.99.100:5000/ -ignore "Name {.git,node_modules}" -auto -batch'
alias tpe-compose='docker-compose --file=$TPE_PATH/artifacts/dev/docker-compose.yml --file=$TPE_PATH/artifacts/dev/codebase.linux.yml'
alias tpe-compose-osx='docker-compose --file=$TPE_PATH/artifacts/dev/docker-compose.yml --file=$TPE_PATH/artifacts/dev/codebase.osx.yml'
